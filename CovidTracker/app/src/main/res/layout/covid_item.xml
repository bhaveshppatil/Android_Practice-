<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crdView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            style="@style/textView"
            android:text="date " />

        <TextView
            android:id="@+id/positive"
            style="@style/textView"
            android:text="positive " />

        <TextView
            android:id="@+id/negative"
            style="@style/textView"
            android:text="negative " />

        <TextView
            android:id="@+id/hospitalizedCurrently"

            style="@style/textView"
            android:text="hospitalizedCurrently " />

        <TextView
            android:id="@+id/onVentilatorCurrently"

            style="@style/textView"
            android:text="onVentilatorCurrently " />

        <TextView
            android:id="@+id/death"
            style="@style/textView"
            android:text="death " />

        <TextView
            android:id="@+id/dateChecked"
            style="@style/textView"
            android:text="dateChecked " />

    </LinearLayout>

</androidx.cardview.widget.CardView>