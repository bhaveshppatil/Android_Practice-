<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User_Event_data">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvUserFName"
            style="@style/textView"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvUserLName"
            style="@style/textView"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvUserEmail"
            style="@style/textView"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvUserNumber"
            style="@style/textView"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvUserNoOfSeat"
            style="@style/textView"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvUserDateOfShow"
            style="@style/textView"

            android:layout_height="50dp" />

    </LinearLayout>


    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="50dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/carter_one"
        android:padding="20dp"
        android:paddingEnd="50dp"
        android:text="Confirm Event"
        android:textColor="#2DF1AC"
        android:textSize="20sp" />


</LinearLayout>